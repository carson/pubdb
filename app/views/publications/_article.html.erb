<% fields_for article do |f| %>
  <p>
    <%= f.label :jounal_title %><br />
    <%= f.text_field :journal_title %>
  </p>
  <p>
    <%= f.label :jounal_title_ja %><br />
    <%= f.text_field :journal_title_ja %>
  </p>
  <p>
    <%= f.label :volume %><br />
    <%= f.text_field :volume %>
  </p>
  <p>
    <%= f.label :issue %><br />
    <%= f.text_field :issue %>
  </p>
  <p>
    <%= f.label :publication_date %><br />
    <%= f.date_select :publication_date %>
  </p>
  <p>
    <%= f.label :publisher %><br />
