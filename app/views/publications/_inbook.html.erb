<% fields_for inbook do |f| %>
  <p>
    <%= f.label :book_title %><br />
    <%= f.text_field :book_title %>
  </p>
  <p>
    <%= f.label :book_title_ja %><br />
    <%= f.text_field :book_title_ja %>
  </p>
  <p>
    <%= f.label :editors %><br />
    <%= f.text_field :editors %>
  </p>
  <p>
    <%= f.label :publication_date %><br />
    <%= f.date_select :publication_date %>
  </p>
  <p>
    <%= f.label :publisher %><br />
    <%= f.text_field :publisher %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :start_page %>
    <%= f.text_field :start_page, :size => 4 %>
    <%= f.label :end_page %>
    <%= f.text_field :end_page, :size => 4 %>
  </p>
  <p>
    <%= f.label :edition %><br />
    <%= f.text_field :edition %>
  </p>
  <p>
    <%= f.label :series %><br />
    <%= f.text_field :series %>
  </p>
  <p>
    <%= f.label :abstract %><br />
    <%= f.text_area :abstract %>
  </p>
<% end %>
